<?xml version="1.0" encoding="utf-8" ?>
<Plants>
	<ThingDef ParentName="TiberiumBase" Class="TiberiumRim.TiberiumDef">
		<defName>TiberiumGreen</defName>
		<label>Green Tiberium</label>
		<description>A glowy green crystal. Looks strangely appealing. Interaction might be dangerous.</description>
		<statBases>
			<MaxHitPoints>50</MaxHitPoints>
			<Beauty>45</Beauty>
		</statBases>
		<graphicData>
			<texPath>Plant/Tiberium/Green</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<pathCost>75</pathCost>
		<plant>
			<dieIfLeafless>false</dieIfLeafless>
			<reproduceMtbDays>0.8</reproduceMtbDays>
			<harvestWork>300</harvestWork>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>GreenTiberiumRaw</harvestedThingDef>
			<harvestDestroys>true</harvestDestroys>
			<harvestYield>1</harvestYield>
			<reproduceRadius>3</reproduceRadius>
			<growDays>3</growDays>
			<visualSizeRange>
				<min>0.7</min>
				<max>1.2</max>
			</visualSizeRange>
		</plant>
		<corruptsInto>TiberiumSoilGreen</corruptsInto>
		<friendlyTo>
			<li>TiberiumGreen</li>
			<li>TiberiumBlue</li>
			<li>TiberiumRed</li>
			<li>TiberiumPlant</li>
			<li>TiberiumVein</li>
			<li>TiberiumGlacier</li>
		</friendlyTo>
		<buildingDamage>10</buildingDamage>
		<entityDamage>2</entityDamage>
	</ThingDef>

