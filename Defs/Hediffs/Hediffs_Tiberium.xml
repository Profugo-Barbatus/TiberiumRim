<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Must redefine vanilla defs in mod content to maintain scope -->
	
	<HediffDef Name="InjuryBase" Abstract="True">
		<hediffClass>Hediff_Injury</hediffClass>
		<tendable>true</tendable>
		<displayWound>true</displayWound>
	</HediffDef>
	
	<HediffDef Name="InfectionBase" Abstract="True">
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
		<initialSeverity>0.1</initialSeverity>
		<comps>
			<li Class="HediffCompProperties_Discoverable">
				<sendLetterWhenDiscovered>true</sendLetterWhenDiscovered>
			</li>
		</comps>
	</HediffDef>

	<!-- Treating Tiberium like a disease -->
	
	<HediffDef ParentName="InfectionBase">
		<defName>TiberiumContactPoison</defName>
		<defaultLabelColor>(45, 205, 0)</defaultLabelColor>
		<label>Natural Tiberium Poisoning</label>
		<makesSickThought>true</makesSickThought>
		<tendable>true</tendable>
		<lethalSeverity>1</lethalSeverity>
		<comps>
			<li Class="HediffCompProperties_TendDuration">
				<tendDuration>60000</tendDuration>
				<severityPerDayTended>-0.05</severityPerDayTended>
			</li>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>0.4</severityPerDayNotImmune>
			</li>
		</comps>
		<stages>
			<li>
				<minSeverity>1</minSeverity>
				<label>Minor Tiberium Infection</label>
				<painOffset>0.3</painOffset>
				<capMods>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>BloodPumping</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>3.5</minSeverity>
				<label>Major Tiberium Infection</label>
				<lifeThreatening>true</lifeThreatening>
				<vomitMtbDays>0.5</vomitMtbDays>
				<painOffset>0.5</painOffset>
				<capMods>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>-0.3</offset>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.25</offset>
					</li>
					<li>
						<capacity>BloodPumping</capacity>
						<offset>-0.30</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.15</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>8.5</minSeverity>
				<label>Lethal Tiberium Infection</label>
				<lifeThreatening>true</lifeThreatening>
				<painOffset>0.85</painOffset>
				<capMods>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>-0.7</offset>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.65</offset>
					</li>
					<li>
						<capacity>BloodPumping</capacity>
						<offset>-0.85</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.70</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.50</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.80</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.80</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	
	<HediffDef>
		<defName>TiberiumBuildup</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(45, 205, 0)</defaultLabelColor>
		<label>Tiberium exposure</label>
		<lethalSeverity>1</lethalSeverity>
		<makesSickThought>true</makesSickThought>
		<scenarioCanAdd>false</scenarioCanAdd>
		<comps>
		  <li Class="HediffCompProperties_Immunizable">
			<severityPerDayNotImmune>-0.08</severityPerDayNotImmune>
		  </li>
		</comps>
		<stages>
		  <li>
			<label>initial-hidden</label>
			<everVisible>false</everVisible>
		  </li>
		  <li>
			<label>initial</label>
			<minSeverity>0.04</minSeverity>
			<capMods>
			  <li>
				<capacity>Consciousness</capacity>
				<offset>-0.05</offset>
			  </li>
			</capMods>
		  </li>
		  <li>
			<label>minor</label>
			<minSeverity>0.2</minSeverity>
			<capMods>
			  <li>
				<capacity>Consciousness</capacity>
				<offset>-0.10</offset>
			  </li>
			</capMods>
		  </li>
		  <li>
			<label>moderate</label>
			<minSeverity>0.40</minSeverity>
			<vomitMtbDays>5</vomitMtbDays>
			<capMods>
			  <li>
				<capacity>Consciousness</capacity>
				<offset>-0.15</offset>
			  </li>
			</capMods>
		  </li>
		  <li>
			<label>serious</label>
			<minSeverity>0.60</minSeverity>
			<vomitMtbDays>1</vomitMtbDays>
			<capMods>
			  <li>
				<capacity>Consciousness</capacity>
				<offset>-0.25</offset>
			  </li>
			</capMods>
		  </li>
		  <li>
			<label>extreme</label>
			<minSeverity>0.80</minSeverity>
			<vomitMtbDays>0.5</vomitMtbDays>
			<capMods>
			  <li>
				<capacity>Consciousness</capacity>
				<setMax>0.10</setMax>
			  </li>
			</capMods>
		  </li>
		</stages>
	</HediffDef>
	
</Defs>
