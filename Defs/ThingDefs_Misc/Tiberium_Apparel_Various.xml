<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

	<ThingDef Name="ApparelBase" Abstract="True">
		<thingClass>Apparel</thingClass>
		<category>Item</category>
		<selectable>True</selectable>
		<pathCost>10</pathCost>
		<useHitPoints>True</useHitPoints>
		<graphicData>
			<onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
		</graphicData>
		<drawGUIOverlay>true</drawGUIOverlay>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>2</DeteriorationRate>
			<Beauty>-6</Beauty>
		</statBases>
		<altitudeLayer>Item</altitudeLayer>
		<alwaysHaulable>True</alwaysHaulable>
		<tickerType>Never</tickerType>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
			<li>
				<compClass>CompColorable</compClass>
			</li>
			<li>
				<compClass>CompQuality</compClass>
			</li>
		</comps>
	</ThingDef>

	<ThingDef Name="ApparelMakeableBase" ParentName="ApparelBase" Abstract="True">
		<recipeMaker>
			<workSpeedStat>TailoringSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Tailor</effectWorking>
			<soundWorking>Recipe_Tailor</soundWorking>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
		</recipeMaker>
	</ThingDef>
  
	<ThingDef ParentName="ApparelMakeableBase">
		<defName>TiberiumSuit_TBP</defName>
		<description>A suit to protect from Tiberium.\n\n Also protects from toxic fallout.</description>
		<label>Tiberium protection suit</label>
		<recipeMaker>
		<researchPrerequisite>TiberiumKnowledge</researchPrerequisite>
		</recipeMaker>
		<graphicData>
		<texPath>Pawn/Humanlike/Apparel/TiberiumSuitParts/TiberiumSuit</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costList>
			<Plasteel>5</Plasteel>
			<Steel>75</Steel>
			<Cloth>120</Cloth>
		</costList>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<statBases>
			<MarketValue>1250</MarketValue>
			<MaxHitPoints>260</MaxHitPoints>
			<WorkToMake>10000</WorkToMake>
			<Mass>4</Mass>
			<ArmorRating_Blunt>0.04</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.04</ArmorRating_Sharp>
			<ArmorRating_Heat>0.05</ArmorRating_Heat>
			<Insulation_Cold>-50</Insulation_Cold>
			<Insulation_Heat>50</Insulation_Heat>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.02</MoveSpeed>
			<ToxicSensitivity>-1</ToxicSensitivity>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
				<li>Hands</li>
				<li>Feet</li>
			</bodyPartGroups>
			<worngraphicPath>Pawn/Humanlike/Apparel/TiberiumSuitParts/TiberiumSuit</worngraphicPath>
			<layers>
			<li>Shell</li>
			</layers>
			<tags>
			<li>Outlander</li>
			</tags>
			<defaultOutfitTags>
			<li>Worker</li>
			</defaultOutfitTags>
		</apparel>
	</ThingDef>
  
  
</ThingDefs>
