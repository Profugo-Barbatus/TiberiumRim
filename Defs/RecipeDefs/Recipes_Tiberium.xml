	<RecipeDef>
		<defName>ExtractResourcesFromGreenTiberium</defName>
		<label>get resources from green Tiberium</label>
		<description>This refinery uses complex reactions to break down the lethal Tiberium into useful materials.</description>
		<jobString>Refining green Tiberium.</jobString>
		<workAmount>1000</workAmount>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
					<li>GreenTiberiumRaw</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<products>
			<Steel>25</Steel>
		</products>
		<workSkill>Crafting</workSkill>
		<fixedIngredientFilter>
			<thingDefs>
				<li>GreenTiberiumRaw</li>
			</thingDefs>
		</fixedIngredientFilter>
	</RecipeDef>
  
