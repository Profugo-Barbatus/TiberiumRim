<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>
	<!-- Must Redefine Vanilla abstracts to maintain mod Scope -->
	
	<ThingDef Name="BaseGun" Abstract="True">
		<category>Item</category>
		<thingClass>ThingWithComps</thingClass>
		<equipmentType>Primary</equipmentType>
		<pathCost>10</pathCost>
		<useHitPoints>True</useHitPoints>
		<selectable>True</selectable>
		<graphicData>
			<onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
		</graphicData>
		<drawGUIOverlay>true</drawGUIOverlay>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>0.6</Flammability>
			<DeteriorationRate>1</DeteriorationRate>
			<SellPriceFactor>0.7</SellPriceFactor>
		</statBases>
		<altitudeLayer>Item</altitudeLayer>
		<alwaysHaulable>True</alwaysHaulable>
		<tickerType>Never</tickerType>
		<!-- Need "Tiberium" techlevel-->
		<techLevel>Industrial</techLevel>
		<thingCategories>
			<li>WeaponsRanged</li>
		</thingCategories>
		<inspectorTabs>
			<li>ITab_Art</li>
		</inspectorTabs>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
			<li>
				<compClass>CompEquippable</compClass>
			</li>
			<li>
				<compClass>CompQuality</compClass>
			</li>
			<li Class="CompProperties_Art">
				<nameMaker>ArtName_WeaponGun</nameMaker>
				<descriptionMaker>ArtDescription_WeaponGun</descriptionMaker>
				<minQualityForArtistic>Excellent</minQualityForArtistic>
			</li>
		</comps>
    </ThingDef>

	<ThingDef Name="BaseMakeableGun" ParentName="BaseGun" Abstract="True">
		<recipeMaker>
			<workSpeedStat>SmithingSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Smith</effectWorking>
			<soundWorking>Recipe_Smith</soundWorking>
			<recipeUsers>
				<li>TableMachining</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
		</recipeMaker>
	</ThingDef>

	<ThingDef Name="BaseHumanGun" ParentName="BaseGun" Abstract="True">
		<weaponTags>
			<li>Gun</li>
		</weaponTags>
	</ThingDef>
	  
	<ThingDef Name="BaseHumanMakeableGun" ParentName="BaseMakeableGun" Abstract="True">
		<weaponTags>
			<li>Gun</li>
		</weaponTags>
	</ThingDef>

	<ThingDef Name="BaseBullet" Abstract="True">
		<category>Projectile</category>
		<tickerType>Normal</tickerType>
		<altitudeLayer>Projectile</altitudeLayer>
		<thingClass>Bullet</thingClass>
		<label>bullet</label>
		<useHitPoints>False</useHitPoints>
		<neverMultiSelect>True</neverMultiSelect>
		<graphicData>
			<shaderType>Transparent</shaderType>
		</graphicData>
	</ThingDef>
  
	<!-- Tiberium Projectile -->
	
	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_TiberiumFlechette</defName>
		<label>Tiberium Flechette</label>
		<projectile>
			<damageDef>Tiberium</damageDef>
			<DamageAmountBase>1</DamageAmountBase>
			<Speed>85</Speed>
		</projectile>
		<graphicData>
			<texPath>Projectile/Bullet_Tiberium</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
	</ThingDef>
	
	<!-- Tiberium Rifles -->
	
	<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>Gun_TiberiumRifle</defName>
		<label>Tiberium Flechette Rifle</label>
		<description>The Tiberium Flechette Rifle fires dozens of small shards of Tiberium at its target. Its extremely effective against infantry, but fairs poorly against anything else.</description>
		<graphicData>
			<texPath>Item/Equipment/WeaponRanged/TiberiumFlechetteRifle</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>InteractChargeRifle</soundInteract>
		<statBases>
			<WorkToMake>250</WorkToMake>
			<Mass>5.5</Mass>
			<AccuracyTouch>0.76</AccuracyTouch>
			<AccuracyShort>0.80</AccuracyShort>
			<AccuracyMedium>0.65</AccuracyMedium>
			<AccuracyLong>0.55</AccuracyLong>
			<RangedWeapon_Cooldown>1.3</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<Steel>110</Steel>
			<Component>5</Component>
			<Uranium>1</Uranium>
		</costList>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<projectileDef>Bullet_TiberiumFlechette</projectileDef>
				<warmupTime>1.0</warmupTime>
				<range>23</range>
				<ticksBetweenBurstShots>7</ticksBetweenBurstShots>
				<burstShotCount>4</burstShotCount>
				<soundCast>ShotChargeRifle</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
	</ThingDef>
</ThingDefs>